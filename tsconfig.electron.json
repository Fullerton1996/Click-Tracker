{
  "compilerOptions": {
    "outDir": "dist-electron",
    "module": "CommonJS",
    "target": "ES2020",
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "declaration": false,
    "lib": ["ES2020"],
    "types": ["node", "electron"]
  },
  "include": [
    "src/main/**/*",
    "src/preload/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-electron"
  ]
}